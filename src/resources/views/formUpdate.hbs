<div class="container mt-4 has-background-white">
    <div class="messages columns">
        <div class="column columns">
            <div class="account user-main column">
                <h2>
                    Thông tin tài khoản
                </h2>
                <form action="/{{user._id}}/update-user?_method=PATCH" enctype="multipart/form-data" method="POST" width="100%">
                    <div  class=" avatar">
                        <img src="/img/{{user.emoji}}" alt="Ảnh bìa manga!!!" style="width: 100px; height: 120px;">
                        <input class=" form-control" type="file" name="avatar" style="width: 300px ;color: black !important;">
                    </div>
                    <div  class="form-group">
                        <label for="">Email: </label>
                        <input class=" form-control" type="text" value="{{user.email}}" style="width:500px" disabled>
                    </div>
                    <div  class="form-group">
                        <label for="">Phone: </label>
                        <input class=" form-control"  type="text" value="{{user.phone}}" style="width:500px" disabled>
                    </div>

                    <h2>Information</h2>
                    <div class="form-group">
                        <label for="">Name: </label>
                        <input class=" form-control" type="text" value="{{user.name}}" style="width:500px" id="name" name="name">
                    </div>
                    <div class="form-group">
                        <label for="">Address: </label>
                        <input class=" form-control" type="text" value="{{user.address}}" style="width:500px" id="address" name="address">
                    </div>
                    <div>
                        <button class="btn btn-success">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
